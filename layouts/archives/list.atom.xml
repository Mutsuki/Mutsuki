{{- $pctx := . }}
<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title>{{ .Title | htmlEscape }}</title>
    <link href="{{ .Permalink | safeURL }}" rel="self"/>
    <link href="{{ .Site.BaseURL | safeURL }}"/>
    <updated>{{ now.Format "2006-01-02T15:04:05Z" }}</updated>
    <id>{{ .Permalink | safeURL }}</id>
    <author>
        <name>{{ .Site.Title | htmlEscape }}</name>
    </author>
    {{ range .Pages }}
    <entry>
        <title>{{ .Title | htmlEscape }}</title>
        <link href="{{ .Permalink | safeURL }}" />
        <id>{{ .Permalink | safeURL }}</id>
        <updated>{{ .Date.Format "2006-01-02T15:04:05Z" }}</updated>
        <summary type="html">{{ .Summary | plainify | htmlEscape }}</summary>
        <content type="html">{{ .Content | htmlEscape }}</content>
    </entry>
    {{- end }}
</feed>
